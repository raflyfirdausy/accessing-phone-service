<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanggilanActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Short Message Service"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:text="oleh : PMO 2 Kelompok 4 (TI 16 B)"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/et_nomerHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Masukan Nomer Hp"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/et_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Pesan"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btn_smsManager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Kirim Menggunakan SMS Manager"
        android:textSize="15dp"
        android:textColor="#FFFF"/>

    <Button
        android:id="@+id/btn_smsSendTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Kirim Menggunakan Send To Intent"
        android:textSize="15dp"
        android:textColor="#FFFF"/>

    <Button
        android:id="@+id/btn_smsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Kirim Menggunakan View"
        android:textSize="15dp"
        android:textColor="#FFFF"/>

</LinearLayout>