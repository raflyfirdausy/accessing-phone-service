<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Akses Phone services"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:text="oleh : PMO 2 Kelompok 4 (TI 16 B)"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/btn_panggilanTelepone"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Panggilan Telepone"
        android:textSize="18dp"
        android:textColor="#FFFF"/>

    <Button
        android:id="@+id/btn_membacaStatusTelepone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Membaca Status Telepone"
        android:textColor="#FFFF"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_kirimPesanMMS"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Short Message Service"
        android:textSize="18dp"
        android:textColor="#FFFF"/>


</LinearLayout>